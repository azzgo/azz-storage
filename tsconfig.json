{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceRoot": "./src",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  },
  "files": ["./src/index.ts"]
}
